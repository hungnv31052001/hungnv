@model List<Application>

<h1>My Applications</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Job Title</th>
                <th>Submission Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model)
            {
                <tr>
                    <td>@application.Job.Title</td>
                    <td>@application.SubmissionDate.ToString("dd/MM/yyyy")</td>
                    <td>@application.Status</td>
                    <td>
                        <!-- Nút Xóa -->
                        <form asp-action="Delete" asp-route-id="@application.Id" method="post">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this application?');">Delete</button>
                        </form>

                        <!-- Nút Chấp Thuận -->
                        <form asp-action="Approve" asp-route-id="@application.Id" method="post">
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>

                        <!-- Nút Không Chấp Thuận -->
                        <form asp-action="Reject" asp-route-id="@application.Id" method="post">
                            <button type="submit" class="btn btn-warning">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No applications found.</p>
}

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
