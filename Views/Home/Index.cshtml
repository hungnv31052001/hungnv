    @model IEnumerable<JobWebApplicationvip.Models.Job>
    @{
        ViewData["Title"] = "Index";
    }

    <style>
        .job-item {
            margin-bottom: 30px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden; /* Đảm bảo rằng nội dung không tràn ra khỏi khung */
        }

        .bigger-button .btn-info {
            padding: 8px 16px; /* Điều chỉnh kích thước nút */
        }

        .company-img img {
            max-width: 100%;
            height: auto;
        }

        .job-details {
            padding: 15px;
        }

            .job-details ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                .job-details ul li {
                    margin-bottom: 5px;
                }

        .job-title a {
            text-decoration: none;
            color: #333;
        }

        .job-title h4 {
            margin: 0;
        }

        .items-link {
            text-align: right;
            padding: 10px;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: #fff;
        }
    </style>

    <h1>Jobs</h1>

    <div class="row">
        @foreach (var job in Model)
        {
            <div class="col-md-4">
                <div class="job-item">
                    <div class="company-img">
                        @if (!string.IsNullOrEmpty(job.ImagePath))
                        {
                            <img src="@Url.Content("~/images/" + job.ImagePath)" alt="@job.Title" />
                        }
                        else
                        {
                            <span>No image available</span>
                        }
                    </div>
                    <div class="job-details">
                        <div class="job-title">
                            <a href="job_details.html"><h4>@job.Title</h4></a>
                        </div>
                        <ul>
                            <li>Description: @job.Description</li>
                            <li>Qualifications: @job.RequiredQualifications</li>
                            <li>Deadline: @job.ApplicationDeadline.ToString("dd/MM/yyyy")</li>
                             
                        </ul>
                    </div>
                    <div class="items-link bigger-button">
                        <a asp-controller= "Jobs"asp-action="Details" asp-route-id="@job.Id" class="btn btn-sm btn-info">Details</a>
                    </div>

                </div>
            </div>
        }
    </div>
