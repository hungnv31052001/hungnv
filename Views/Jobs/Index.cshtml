@model IEnumerable<JobWebApplicationvip.Models.Job>
@{
    ViewData["Title"] = "Index";
}

<style>
    .job-image {
        display: block;
        margin: auto;
        max-width: 100%;
        height: auto;
    }
</style>

<h1>Jobs</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Job</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.RequiredQualifications)</th>
            <th>@Html.DisplayNameFor(model => model.ApplicationDeadline)</th>
            <th>Job Image</th>
            <th>@Html.DisplayNameFor(model => model.Employer)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.RequiredQualifications)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplicationDeadline)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content("~/images/" + item.ImagePath)" alt="@item.Title" class="job-image" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Employer.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.Id)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>